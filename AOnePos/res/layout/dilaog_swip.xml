<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2c3e50"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/li_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#e74c3c"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Swip Card"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/li_topbar"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:orientation="vertical"
        android:visibility="visible" >

        <EditText
            android:id="@+id/editText_CreditCard"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="CREDIT CARD NUMBER"
            android:inputType="text" />

        <EditText
            android:id="@+id/editText_ExpMonth"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="EXP Month"
            android:inputType="number" />

        <EditText
            android:id="@+id/editText_ExpYear"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="EXP Year"
            android:inputType="number" />

        <EditText
            android:id="@+id/editText_Cvv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="CVV Code"
            android:inputType="number" />

        <Button
            android:id="@+id/bt_ok"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="OK" />
    </LinearLayout>

</RelativeLayout>