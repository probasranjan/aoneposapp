<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="50dp"
        android:paddingLeft="20dp" >

        <LinearLayout
            android:id="@+id/hello"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/hqbackground69opacity"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/logo_login_bg" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:text="Reports"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/headeraonelogo" />

                <DigitalClock
                    android:id="@+id/digital_clock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:padding="5dp"
                    android:text="DigitalClock"
                    android:textColor="@android:color/black"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/loginname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="0dp"
                    android:layout_toLeftOf="@+id/loginnameval"
                    android:text="Employee Id:"
                    android:textColor="@android:color/black"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/loginnameval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/digital_clock"
                    android:text="sdsd"
                    android:textColor="@android:color/black"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/station_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/loginname"
                    android:text="StationNo: 01"
                    android:textColor="@android:color/black"
                    android:textSize="10sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/toprightmenu"
                android:orientation="horizontal"
                android:weightSum="5" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/addreports"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/highlightedtopmenuitem"
                    android:padding="10dp"
                    android:text="Sales"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/viewreports"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/toprightmenu"
                    android:padding="10dp"
                    android:text="Stock"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/white"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="10dp"
                    android:background="#3c6586"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TableLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >

                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:focusable="true"
                                    android:padding="0dp"
                                    android:text="From Date"
                                    android:textColor="#ffffff"
                                    android:textSize="15sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="0dp"
                                    android:text="To Date"
                                    android:textColor="#ffffff"
                                    android:textSize="15sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" >

                                <TextView
                                    android:id="@+id/fromDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:ems="5"
                                    android:layout_marginLeft="3dp"
                                    android:layout_marginRight="3dp"
                                    android:textColor="#000000"
                                    android:gravity="left|center_vertical"
                                    android:background="#ffffff"
                                    android:padding="2dp" />

                                <TextView
                                    android:id="@+id/toDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:ems="5"
                                    android:textColor="#000000"
                                    android:gravity="left|center_vertical"
                                    android:background="#ffffff"
                                    android:padding="2dp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:focusable="true"
                                    android:padding="0dp"
                                    android:text="From Time"
                                    android:textColor="#ffffff"
                                    android:textSize="15sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="0dp"
                                    android:text="To Time"
                                    android:textColor="#ffffff"
                                    android:textSize="15sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" >

                                <TextView
                                    android:id="@+id/fromTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:ems="5"
                                    android:layout_marginLeft="3dp"
                                    android:layout_marginRight="3dp"
                                    android:textColor="#000000"
                                    android:background="#ffffff"
                                    android:gravity="left|center_vertical"
                                    android:padding="2dp" />

                                <TextView
                                    android:id="@+id/toTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:ems="5"
                                    android:textColor="#000000"
                                    android:background="#ffffff"
                                    android:gravity="left|center_vertical"
                                    android:padding="2dp" />
                            </TableRow>
                        </TableLayout>

                        <LinearLayout
                            android:id="@+id/sales_reports"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="visible" >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="0dp"
                                    android:text="Report Type"
                                    android:textColor="#ffffff"
                                    android:textSize="15sp" />

                                <Spinner
                                    android:id="@+id/reporttype"
                                    android:layout_width="140dp"
                                    android:layout_height="40dp"
                                    android:paddingLeft="6dp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical" >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="0dp"
                                        android:text="Department Type"
                                        android:textColor="#ffffff"
                                        android:textSize="15sp" />

                                    <Spinner
                                        android:id="@+id/prodactType"
                                        android:layout_width="140dp"
                                        android:layout_height="40dp"
                                        android:paddingLeft="6dp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="0dp"
                                    android:text="Payment Type"
                                    android:textColor="#ffffff"
                                    android:textSize="15sp" />

                                <Spinner
                                    android:id="@+id/paymenttype"
                                    android:layout_width="140dp"
                                    android:layout_height="40dp"
                                    android:paddingLeft="6dp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical" >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="0dp"
                                        android:text="Order Status"
                                        android:textColor="#ffffff"
                                        android:textSize="15sp" />

                                    <Spinner
                                        android:id="@+id/orderStatus"
                                        android:layout_width="140dp"
                                        android:layout_height="40dp"
                                        android:paddingLeft="6dp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="0dp"
                                    android:text="Employee Id"
                                    android:textColor="#ffffff"
                                    android:textSize="15sp" />

                                <Spinner
                                    android:id="@+id/employeeid"
                                    android:layout_width="140dp"
                                    android:layout_height="40dp"
                                    android:paddingLeft="6dp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical" >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="0dp"
                                        android:text="Store Id"
                                        android:textColor="#ffffff"
                                        android:textSize="15sp" />

                                    <Spinner
                                        android:id="@+id/customerid"
                                        android:layout_width="140dp"
                                        android:layout_height="40dp"
                                        android:paddingLeft="6dp" />
                                </LinearLayout>
                            </LinearLayout>

                            <AutoCompleteTextView
                                android:id="@+id/itemauto"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:ems="9"
                                android:textColor="#000000"
                                android:textSize="15sp" />

                            <Button
                                android:id="@+id/go"
                                android:layout_width="60dp"
                                android:layout_height="45dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/greenbutton"
                                android:text="GO"
                                android:textColor="#ffffff" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical" >

                                <Button
                                    android:id="@+id/savefile"
                                    android:layout_width="80dp"
                                    android:layout_height="45dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/greenbutton"
                                    android:text="Save File"
                                    android:textColor="#ffffff" />

                                <Button
                                    android:id="@+id/print_button"
                                    android:layout_width="80dp"
                                    android:layout_height="45dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/greenbutton"
                                    android:text="Print"
                                    android:textColor="#ffffff" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/invetory_reports"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="6"
                                android:layout_marginTop="19dp" >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Category"
                                        android:layout_marginRight="5dp"
                                        android:textAppearance="?android:attr/textAppearanceSmall"
                                        android:textColor="#ffffff"
                                        android:gravity="right"
                                        android:textStyle="bold" android:layout_weight="1"/>
                              
                                    <Spinner
                                        android:id="@+id/category_spinner"
                                        android:layout_width="120dp"
                                         android:layout_weight="1"
                                        android:layout_height="40dp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Department"
                                        android:layout_marginLeft="10dp"
                                         android:layout_weight="1"
                                         android:gravity="right"
                                         android:layout_marginRight="5dp"
                                        android:textAppearance="?android:attr/textAppearanceSmall"
                                        android:textColor="#ffffff"
                                        android:textStyle="bold" />
                              
                                    <Spinner
                                        android:id="@+id/department_spinner"
                                        android:layout_width="120dp"
                                         android:layout_weight="1"
                                        android:layout_height="40dp" />

                                    <AutoCompleteTextView
                                        android:id="@+id/stock_autocomplate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="45dp"
                                        android:ems="10"
                                        android:layout_marginLeft="10dp"
                                         android:layout_weight="1"
                                        android:inputType="text" />
                                
                                    <Button
                                        android:id="@+id/go_stock"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_marginLeft="10dp"
                                        android:background="@drawable/go" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <WebView
                        android:id="@+id/webfor_print"
                        android:layout_width="460dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:visibility="invisible" />

                    <LinearLayout
                        android:id="@+id/layout_inflate"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical" >
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <SlidingDrawer
        android:id="@+id/SlidingDrawer"
        android:layout_width="240dp"
        android:layout_height="fill_parent"
        android:content="@+id/contentLayout"
        android:handle="@+id/slideButton"
        android:orientation="horizontal"
        android:rotation="180" >

        <ImageView
            android:id="@+id/slideButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="515dp"
            android:rotation="180"
            android:src="@drawable/arrow" >
        </ImageView>

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:rotation="180" >

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/image0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/po0" />

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/i1" />

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/storesnormal" />

                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cu1" />

                    <ImageView
                        android:id="@+id/image4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/e1" />

                    <ImageView
                        android:id="@+id/image5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/r1" />

                    <ImageView
                        android:id="@+id/image6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/st1" />

                    <ImageView
                        android:id="@+id/image7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/c1" />

                    <ImageView
                        android:id="@+id/image8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/pro0" />

                    <ImageView
                        android:id="@+id/logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/pro0" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </SlidingDrawer>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/top"
        android:background="@android:color/white"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/tabbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="855dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/helpicon" />

        <ImageView
            android:id="@+id/logout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logoutbutton" />
    </LinearLayout>

</RelativeLayout>