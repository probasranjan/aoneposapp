<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="50dp"
        android:paddingLeft="20dp" >

        <LinearLayout
            android:id="@+id/hello"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/hqbackground69opacity"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/logo_login_bg" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:text="Employee"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/headeraonelogo" />

                <DigitalClock
                    android:id="@+id/digital_clock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:padding="5dp"
                    android:text="DigitalClock"
                    android:textColor="@android:color/black"
                    android:textSize="10sp" />
                
                <TextView
                    android:id="@+id/loginname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="0dp"
                    android:layout_toLeftOf="@+id/loginnameval"
                    android:text="Employee Id:"
                    android:textColor="@android:color/black"
                    android:textSize="10sp" />
                
                 <TextView
                    android:id="@+id/loginnameval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/digital_clock"
                    android:text="sdsd"
                    android:textColor="@android:color/black"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/station_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/loginname"
                    android:text="StationNo: 01"
                    android:textColor="@android:color/black"
                    android:textSize="10sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@android:color/white"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="10dp"
                    android:background="#3c6586"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/inflatingLayout"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/toprightmenu"
                            android:orientation="horizontal"
                            android:weightSum="5" >

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1" />

                            <Button
                                android:id="@+id/addcat"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/highlightedtopmenuitem"
                                android:padding="10dp"
                                android:text="Add Employee"
                                android:textColor="@android:color/black"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1" />

                            <Button
                                android:id="@+id/viewcat"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/toprightmenu"
                                android:padding="10dp"
                                android:text="View and Edit Employee"
                                android:textColor="@android:color/white"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/add_ll"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#3c6586"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="2" >

                            <HorizontalScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" >

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="10dp" >

                                    <RelativeLayout
                                        android:id="@+id/topLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:layout_marginTop="10dp" >

                                        <LinearLayout
                                            android:id="@+id/firstTextLayout"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:orientation="vertical" >

                                            <TextView
                                                android:id="@+id/adminEmployeeDepartmentText"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="10dp"
                                                android:text="Department"
                                                android:textAppearance="?android:attr/textAppearanceSmall"
                                                android:textColor="#ffffff"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/adminEmployeeIdText"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="35dp"
                                                android:text="Employee ID"
                                                android:textAppearance="?android:attr/textAppearanceSmall"
                                                android:textColor="#ffffff"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/adminEmployeeDisplayText"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="33dp"
                                                android:text="Display Name"
                                                android:textAppearance="?android:attr/textAppearanceSmall"
                                                android:textColor="#ffffff"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/adminEmployeePasswordText"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="30dp"
                                                android:text="Password"
                                                android:textAppearance="?android:attr/textAppearanceSmall"
                                                android:textColor="#ffffff"
                                                android:textStyle="bold" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/firstEditLayout"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="5dp"
                                            android:layout_toRightOf="@+id/firstTextLayout"
                                            android:orientation="vertical" >

                                            <EditText
                                                android:id="@+id/adminEmployeeDepartmentEdit"
                                                android:layout_width="250dp"
                                                android:layout_height="40dp"
                                                android:layout_marginLeft="20dp"
                                                android:imeOptions="actionNext"
                                                android:inputType="text"
                                                android:singleLine="true" />

                                            <EditText
                                                android:id="@+id/editText3"
                                                android:layout_width="250dp"
                                                android:layout_height="40dp"
                                                android:layout_marginLeft="20dp"
                                                android:layout_marginTop="10dp"
                                                android:imeOptions="actionNext"
                                                android:inputType="text"
                                                android:singleLine="true" />

                                            <EditText
                                                android:id="@+id/adminEmployeeDisplayEdit"
                                                android:layout_width="250dp"
                                                android:layout_height="40dp"
                                                android:layout_marginLeft="20dp"
                                                android:layout_marginTop="10dp"
                                                android:imeOptions="actionNext"
                                                android:inputType="text"
                                                android:singleLine="true" />

                                            <EditText
                                                android:id="@+id/adminEmployeePasswordEdit"
                                                android:layout_width="250dp"
                                                android:layout_height="40dp"
                                                android:layout_marginLeft="20dp"
                                                android:layout_marginTop="10dp"
                                                android:imeOptions="actionDone"
                                                android:inputType="textPassword"
                                                android:singleLine="true" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/secondTextLayout"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:layout_toRightOf="@+id/firstEditLayout"
                                            android:orientation="vertical" >

                                            <TextView
                                                android:id="@+id/adminEmployeeCardSwipeIdText"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="10dp"
                                                android:text="CardSwipe ID"
                                                android:textAppearance="?android:attr/textAppearanceSmall"
                                                android:textColor="#ffffff"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/adminEmployeeCustomerText"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="35dp"
                                                android:text="Customer"
                                                android:textAppearance="?android:attr/textAppearanceSmall"
                                                android:textColor="#ffffff"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/adminEmployeeHourlyWageText"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="30dp"
                                                android:text="Hourly Wage"
                                                android:textAppearance="?android:attr/textAppearanceSmall"
                                                android:textColor="#ffffff"
                                                android:textStyle="bold" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/secondEditLayout"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="5dp"
                                            android:layout_toRightOf="@+id/secondTextLayout"
                                            android:orientation="vertical" >

                                            <EditText
                                                android:id="@+id/editText5"
                                                android:layout_width="250dp"
                                                android:layout_height="40dp"
                                                android:layout_marginLeft="20dp"
                                                android:imeOptions="actionNext"
                                                android:inputType="text"
                                                android:singleLine="true" />

                                            <EditText
                                                android:id="@+id/adminEmployeeCustomerEdit"
                                                android:layout_width="250dp"
                                                android:layout_height="40dp"
                                                android:layout_marginLeft="20dp"
                                                android:layout_marginTop="10dp"
                                                android:imeOptions="actionNext"
                                                android:inputType="text"
                                                android:singleLine="true" />

                                            <EditText
                                                android:id="@+id/adminEmployeeHourlyWageEdit"
                                                android:layout_width="250dp"
                                                android:layout_height="40dp"
                                                android:layout_marginLeft="20dp"
                                                android:layout_marginTop="10dp"
                                                android:imeOptions="actionNext"
                                                android:inputType="text"
                                                android:singleLine="true" />
                                        </LinearLayout>
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:id="@+id/bottomTotalButtonLayout"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/buttonss"
                                        android:layout_centerHorizontal="true"
                                        android:padding="10dp" >

                                        <Button
                                            android:id="@+id/employeesave"
                                            android:layout_width="80dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="50dp"
                                            android:background="@drawable/greenbutton"
                                            android:text="Save"
                                            android:textColor="#ffffff" />

                                        <Button
                                            android:id="@+id/employeecancel"
                                            android:layout_width="80dp"
                                            android:layout_height="wrap_content"
                                            android:layout_toRightOf="@+id/employeesave"
                                            android:background="@drawable/greenbutton"
                                            android:text="Cancel"
                                            android:textColor="#ffffff" />
                                    </RelativeLayout>

                                    <LinearLayout
                                        android:id="@+id/checklayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/topLayout"
                                        android:layout_margin="5dp"
                                        android:orientation="horizontal"
                                        android:weightSum="3" >

                                        <CheckBox
                                            android:id="@+id/checkBox1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="Disable This Employee"
                                            android:textColor="#ffffff" />

                                        <CheckBox
                                            android:id="@+id/checkBox2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="Take CC Tips in Cash at End of Shift"
                                            android:textColor="#ffffff" />

                                        <CheckBox
                                            android:id="@+id/checkBox3"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="Administrative Card Access"
                                            android:textColor="#ffffff" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/buttonss"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/checklayout"
                                        android:layout_centerHorizontal="true"
                                        android:orientation="horizontal"
                                        android:weightSum="3" >

                                        <Button
                                            android:id="@+id/permitions"
                                            android:layout_width="150dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="5dp"
                                            android:background="@drawable/additionaloptions"
                                            android:text="Permissions" />

                                        <Button
                                            android:id="@+id/personalinfo"
                                            android:layout_width="150dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="5dp"
                                            android:background="@drawable/additionaloptions"
                                            android:text="Personal Info" />

                                        <Button
                                            android:id="@+id/payroll"
                                            android:layout_width="150dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="5dp"
                                            android:background="@drawable/additionaloptions"
                                            android:text="Payroll Info" />

                                        <Button
                                            android:id="@+id/storeinfo"
                                            android:layout_width="150dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="5dp"
                                            android:background="@drawable/additionaloptions"
                                            android:text="Store Info" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" >
                                    </LinearLayout>
                                </RelativeLayout>
                            </HorizontalScrollView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/view_ll"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="#3c6586"
                            android:orientation="vertical"
                            android:visibility="visible" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="15dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:orientation="vertical" >

                                <RelativeLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="6dp"
                                    android:padding="8dp" >

                                    <Button
                                        android:id="@+id/button2"
                                        android:layout_width="fill_parent"
                                        android:layout_height="40dp"
                                        android:background="#3c6586"
                                        android:text="Profile Details" />

                                    <LinearLayout
                                        android:id="@+id/linearLayout1"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/button2"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginRight="20dp"
                                        android:gravity="center"
                                        android:orientation="horizontal" >
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/viewnames"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/linearLayout1"
                                        android:visibility="visible"
                                        android:background="#cbcbcb"
                                        android:orientation="horizontal"
                                        android:paddingBottom="5dp"
                                        android:paddingTop="5dp"
                                        android:weightSum="6" >

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal" >

                                            <TextView
                                                android:id="@+id/empname"
                                                android:layout_width="150dp"
                                                android:layout_height="wrap_content"
                                                android:text="Employee ID"
                                                android:textColor="@android:color/black"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/empaddress"
                                                android:layout_width="150dp"
                                                android:layout_height="wrap_content"
                                                android:text="Employee Name"
                                                android:textColor="@android:color/black"
                                                android:textStyle="bold" />
                                        </LinearLayout>

                                      <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="horizontal"
                                            android:weightSum="6" >
                                            <TextView
                                                android:id="@+id/empview"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="right"
                                                android:layout_weight="2"
                                                android:gravity="center_horizontal"
                                                android:textColor="@android:color/black"
                                                android:text="Duplicate"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/empedit"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="right"
                                                android:layout_weight="2"
                                                android:textColor="@android:color/black"
                                                android:gravity="center_horizontal"
                                                android:text="Edit"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/empdelete"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="2"
                                                android:textColor="@android:color/black"
                                                android:gravity="center_horizontal"
                                                android:text="Delete"
                                                android:textStyle="bold" />
                                        </LinearLayout>
                                    </LinearLayout>

                                    <ListView
                                        android:id="@+id/listView1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/viewnames"
                                        android:layout_centerHorizontal="true"
                                        android:layout_margin="2dp"
                                        android:layout_marginTop="20dp"
                                        android:cacheColorHint="@android:color/transparent"
                                        android:drawSelectorOnTop="false"
                                        android:listSelector="@android:color/transparent" >
                                    </ListView>
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <SlidingDrawer
        android:id="@+id/SlidingDrawer"
        android:layout_width="240dp"
        android:layout_height="fill_parent"
        android:content="@+id/contentLayout"
        android:handle="@+id/slideButton"
        android:orientation="horizontal"
        android:rotation="180" >

        <ImageView
            android:id="@+id/slideButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="180"
            android:src="@drawable/arrow" >
        </ImageView>

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:rotation="180" >

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/image0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/po0" />

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/i1" />

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/storesnormal" />

                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cu1" />

                    <ImageView
                        android:id="@+id/image4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/e1" />

                    <ImageView
                        android:id="@+id/image5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/r1" />

                    <ImageView
                        android:id="@+id/image6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/st1" />

                    <ImageView
                        android:id="@+id/image7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/c1" />

                    <ImageView
                        android:id="@+id/image8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/pro0" />

                    <ImageView
                        android:id="@+id/logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/pro0" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </SlidingDrawer>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/top"
        android:background="@android:color/white"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/tabbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="855dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/helpicon" />

        <ImageView
            android:id="@+id/logout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logoutbutton" />
    </LinearLayout>

</RelativeLayout>